<?xml version="1.0" encoding="UTF-8"?>
<!--suppress MavenModelInspection -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>MineCity</artifactId>
        <groupId>br.com.gamemods.minecity</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <artifactId>ForgeBridge</artifactId>
	
	<build>
		<plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <configuration>
                            <tasks>

                                <condition property="gradle.executable" value="gradlew.bat" else="gradlew">
                                    <os family="windows" />
                                </condition>

                                <condition property="gradle.task" value="build" else="setupDecompWorkspace build">
                                    <available file="${project.basedir}/../build/libs/MineCityForge-${project.version}.jar" />
                                </condition>

                                <echo message="Executing: ${gradle.executable} ${gradle.task}" />
                                <exec dir="${project.basedir}/../" failonerror="true"
                                      executable="${project.basedir}/../${gradle.executable}">
                                    <arg line="${gradle.task}" />
                                </exec>

                                <unzip src="${project.basedir}/../build/libs/MineCityForge-${project.version}.jar" dest="${project.basedir}/../build/unzip" />

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
					<execution>
						<id>clean</id>
                        <phase>clean</phase>
                        <configuration>
                            <tasks>

                                <condition property="gradle.executable" value="gradlew.bat" else="gradlew">
                                    <os family="windows" />
                                </condition>

                                <echo message="Executing: ${gradle.executable} clean"/>
                                <exec dir="${project.basedir}/../"
                                      executable="${project.basedir}/../${gradle.executable}">
                                    <arg line="clean" />
                                </exec>

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
</project>