        </command>
        <command id="city.deny.open" parent="city.deny" cmd="open">
            <desc>Deny players to open container like chests, furnaces, frames</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.pvp" parent="city.deny" cmd="pvp">
