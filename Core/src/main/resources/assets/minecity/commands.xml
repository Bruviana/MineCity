        <command id="city.deny.pvc" parent="city.deny" cmd="pvc">
            <desc>Deny players to attack creatures</desc>
            <syntax>[target]</syntax>
        </command>

        <!-- All permissions -->
        <command id="city.allow.all.enter" parent="city.allow.all" cmd="enter">
            <desc>Allows everybody to enter the city, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.click" parent="city.allow.all" cmd="click">
            <desc>Allows everybody to click on clickable blocks, like doors, buttons and levelers. Will also allow who were directly prohibited.</desc>
