<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE minecity-commands SYSTEM "http://gamemods.com.br/minecity-commands-1.0.dtd">
<minecity-commands modified="false" add-missing="true">
    <groups>
        <group id="root" cmd="minecity,mc">
            <desc>All MineCity commands</desc>
        </group>
        <group id="city" parent=",root" cmd="city,town,c,t">
            <desc>All city related commands</desc>
        </group>
        <group id="allow" parent="city" cmd="allow">
            <desc>Gives permission</desc>
        </group>
        <group id="deny" parent="city" cmd="deny">
            <desc>Revokes permission</desc>
        </group>
