            <syntax>[target]</syntax>
        </command>
        <command id="city.allow.all.pvc" parent="city.allow.all" cmd="pvc">
            <desc>Allows everybody to attack creatures, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.enter" parent="city.deny.all" cmd="enter">
            <desc>Prohibits everybody to enter the city, including who were directly prohibited.</desc>
            <syntax>[target]</syntax>
        </command>
        <command id="city.deny.all.click" parent="city.deny.all" cmd="click">
            <desc>Prohibits everybody to click on clickable blocks, like doors, buttons and levelers. Will also prohibit who were directly prohibited.</desc>
